{
    "extends": ["config:base"],
    "timezone": "Asia/Tokyo",
    "schedule": ["every weekend"],
    "labels": ["renovate", "rebase"],
    "patch": {
        "automerge": true
    },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 3am on the first day of the month"]
    },
    "npm": {
        "rangeStrategy": "bump",
        "packageRules": [
            {
                "groupName": "React",
                "packageNames": [
                    "@types/react",
                    "@types/react-dom",
                    "react",
                    "react-dom"
                ]
            },
            {
                "groupName": "ESLint and Prettier",
                "packagePatterns": ["^eslint", "^prettier"]
            },
            {
                "groupName": "Webpack",
                "packagePatterns": ["^webpack"]
            },
            {
                "groupName": "Types",
                "packagePatterns": ["^@types/"]
            },
            {
                "groupName": "Storybook",
                "packagePatterns": [
                    "^@storybook/",
                    "react-docgen-typescript-loader"
                ]
            },
            {
                "groupName": "Sub Lint Tools",
                "packagePatterns": ["^textlint", "^stylelint", "^@commitlint"]
            },
            {
                "groupName": "Main Packages",
                "packagePatterns": [
                    "^lodash",
                    "^dayjs",
                    "^react-icons",
                    "^react-router",
                    "^react-router-dom"
                ]
            },
            {
                "description": "DevDeps",
                "packageNames": [
                    "husky",
                    "rimraf",
                    "jest",
                    "npm-run-all",
                    "int-staged",
                    "ts-jest",
                    "ts-loader",
                    "lint-staged",
                    "core-js",
                    "@testing-library/"
                ]
            }
        ]
    }
}
