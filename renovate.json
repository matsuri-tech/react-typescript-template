{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "labels": ["renovate"],
    "patch": {
        "automerge": true,
        "groupName": "all dependencies",
        "schedule": ["before 3am on Monday"]
    },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 3am on the first day of the month"]
    },
    "minor": {
        "groupName": "all dependencies",
        "schedule": ["before 3am on the first day of the month"]
    }
}
